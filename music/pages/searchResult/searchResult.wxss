.listItem{
  display: flex;
  height: 100rpx;
  margin-top: 10rpx;
}
.listItem image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}
.listItem .musicInfo{
  display: flex;
  flex-direction: column;
  margin-left: 10rpx;
}
.listItem .musicInfo text{
  height: 40rpx;
  line-height: 40rpx;
  font-size: 25rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.iconfont{
  position: absolute;
  right: 0;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: right;
}
.listScroll{  /* 让下面滑动而不是整体滑动 */
  height: 100vh;
}