.container{
  width: 100%;
  height: 80rpx;
  background-color: #ff0000;
  display: flex;
  justify-content: center;
  align-items: center;
  border-top: #fff 1rpx solid;
}
.search{
  color: #fff;
  margin-left: 20rpx;
}
.searchKeyword{
    background-color: #fff;
    width: 75%;
    height: 55rpx;
    border-radius: 20rpx;
    padding: 0 60rpx;
    box-sizing: border-box;
}
.icon-search{
  font-size: 40rpx;
  position: relative;
  left: 60rpx;
  top: 1rpx;
  color: #f00;
}
.content{
  margin-top: 10rpx;
}
.content .title{
  color: #f00;
  margin-bottom: 10rpx;
  margin-left: 10rpx;
}
.keyword{
  margin: 8rpx 15rpx;
  padding: 0 15rpx;
  border-radius: 15rpx;
  display: inline-block;
  background-color: #f00;
  color: #fff;
}

